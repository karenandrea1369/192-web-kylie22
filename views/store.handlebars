<div class="store">
    <div class="filorg">
            <button class="btn filorg__btn">Filtrar y organizar</button>
        <div class="filorg--container">
            <div class="filorg__org">
                <h2 class="tx20--important">Ordenar</h2>
                <form action="/tienda" method="GET">
                    <select class="tx18 order" name="order">
                        <option class="tx18" value="expensive">Precio descendiente</option>
                        <option class="tx18" value="cheap">Precio ascendiente</option>
                        <option class="tx18" value="az">De A a Z</option>
                        <option class="tx18" value="za">De Z a A</option>
                        <option class="tx18" value="new">Últimos agregados</option>
                    </select>
                    <br>
                    <button type="submit">Ordenar</button>
                </form>
            </div>

            <div class="filorg__fil">
                <h2 class="tx20--important">Filtrar</h2>
                <h3 class="tx18">Productos</h3>
                <input class="filter-option" type="checkbox" name="checkbox" value="eye" id="eye">
                <label for="eye" class="tx18"> <span></span> Ojos</label>
                <br>
                <input class="filter-option" type="checkbox" name="checkbox" value="lip" id="lip">
                <label for="lip" class="tx18"> <span></span> Labios</label>
                <br>
                <input class="filter-option" type="checkbox" name="checkbox" value="face" id="face">
                <label for="face" class="tx18"> <span></span> Rostro</label>
                <br>
                <input class="filter-option" type="checkbox" name="checkbox" value="body" id="body">
                <label for="body" class="tx18"> <span></span> Cuerpo</label>
                <br>

                <h3 class="tx18">Precio</h3>
                <input class="filter-option" type="checkbox" name="checkbox" value="ten" id="ten">
                <label for="ten" class="tx18"> <span></span> 10.000 - 40.000</label>
                <br>
                <input class="filter-option" type="checkbox" name="checkbox" value="forty" id="forty">
                <label for="forty" class="tx18"> <span></span> 41.000 - 70.000</label>
                <br>
                <input class="filter-option" type="checkbox" name="checkbox" value="seventy" id="seventy">
                <label for="seventy" class="tx18"> <span></span> 71.000 - 100.000</label>
                <br>
                <input class="filter-option" type="checkbox" name="checkbox" value="onehundred" id="onehundred">
                <label for="onehundred" class="tx18"> <span></span> 101.000 - 130.000</label>
                <br>

                <h3 class="tx18">Popularidad</h3>
                <input class="filter-option" type="checkbox" name="checkbox" value="one" id="one">
                <label for="one" > <span></span> <img src="./data2/p1.png" alt=""></label>
                <br>
                <input class="filter-option" type="checkbox" name="checkbox" value="two" id="two">
                <label for="two"> <span></span> <img src="./data2/p2.png" alt=""></label>
                <br>
                <input class="filter-option" type="checkbox" name="checkbox" value="three" id="three">
                <label for="three"> <span></span> <img src="./data2/p3.png" alt=""></label>
                <br>
                <input class="filter-option" type="checkbox" name="checkbox" value="four" id="four">
                <label for="four"> <span></span> <img src="./data2/p4.png" alt=""></label>
                <br>
                <input class="filter-option" type="checkbox" name="checkbox" value="five" id="five">
                <label for="five"> <span></span> <img src="./data2/p5.png" alt=""></label>
            </div>

        </div>
    </div>

    <div class="products">
        {{#each products}}
            <div class="generalproduct">
                {{!-- <img src="" alt=""> --}}
            <a href="/producto/{{name}}">
                <div class="divimage">
                    <img class="imgproduct" src="./data2/{{img1}}" alt="">
                </div>
            </a>
            <a href="/producto/{{name}}">
                <h3 class="tx18">{{name}}</h3>
            </a>
                {{!-- <img src="" alt=""> --}}
                <div class="infobuy">
                    <div class="infobuy__info">
                        <div class="stars">
                            <img src="./data2/{{stars}}" alt="">
                        </div>
                        <p class="tx20">${{price}}.000</p>
                    </div>
                    <div class="infobuy__buy">
                        <imagebutton class="addtocart infobuy__buybutton" data-name="{{this._id}}"><img src="./data2/buybutton.png" alt=""></button>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>



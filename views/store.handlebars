<div class="products">

    {{#each products}}
        <div class="generalproduct">
            {{!-- <img src="" alt=""> --}}
           <a href="/producto/{{name}}">
               <div class="divimage">
                   <img class="imgproduct" src="./data2/{{img1}}" alt="">
               </div>
           </a>
           <a href="/producto/{{name}}">
               <h3 class="tx20">{{name}}</h3>
           </a>
            {{!-- <img src="" alt=""> --}}
